<section>
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold">Invoice</h1>
        <div class="mt-4">
            <p><strong>Order ID:</strong> <%= order._id %></p>
            <p><strong>Customer:</strong> <%= order.customerId.name %></p>
            <p><strong>Phone:</strong> <%= order.phone %></p>
            <p><strong>Address:</strong> <%= order.address %></p>
            <p><strong>Payment Type:</strong> <%= order.paymentType %></p>
            <p><strong>Payment Status:</strong> <%= order.paymentStatus ? 'Paid' : 'Pending' %></p>
            <p><strong>Status:</strong> <%= order.status %></p>

            <h2 class="text-xl font-semibold mt-4">Items</h2>
            <ul>
                <% for (const item of Object.values(order.items)) { %>
                    <li><%= item.name %> - <%= item.quantity %> x <%= item.price %></li>
                <% } %>
            </ul>

            <p class="mt-4"><strong>Total:</strong> <%= order.items.reduce((total, item) => total + (item.quantity * item.price), 0) %></p>

            <a href="/customers/orders/<%= order._id %>" class="mt-4 inline-block px-4 py-2 bg-blue-500 text-white rounded">Go to Tracking</a>
        </div>
    </div>

</section>