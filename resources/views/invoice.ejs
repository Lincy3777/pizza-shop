<section>
    <div class="max-w-4xl mx-auto my-10 p-6 bg-white shadow-md">
        <!-- Invoice Header -->
        <div class="flex justify-between items-center border-b pb-4">
            <div>
                <h1 class="text-3xl font-bold">Invoice</h1>
                <p class="text-sm text-gray-500">Order #: <%= order._id %></p>
            </div>
            <div class="text-right">
                <p class="font-bold text-lg">Your Pizza Store</p>
                <p class="text-sm text-gray-500">123 Pizza Lane, Food City</p>
                <p class="text-sm text-gray-500">+123-456-7890</p>
                <p class="text-sm text-gray-500">support@yourpizzastore.com</p>
            </div>
        </div>

        <!-- Customer Details -->
        <div class="mt-6">
            <h2 class="text-xl font-semibold">Billing Details</h2>
            <p class="text-sm text-gray-600">Name: <%= order.customerId.name %></p>
            <p class="text-sm text-gray-600">Email: <%= order.customerId.email %></p>
            <p class="text-sm text-gray-600">Address: <%= order.address %></p>
            <p class="text-sm text-gray-600">Phone: <%= order.phone %></p>
            <p class="text-sm text-gray-600">Order Date: <%= moment(order.createdAt).format('MMMM Do YYYY, h:mm:ss a') %></p>
        </div>

        <!-- Order Items Table -->
        <div class="mt-6">
            <h2 class="text-xl font-semibold">Order Summary</h2>
            <table class="w-full mt-4 table-auto border-collapse">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border px-4 py-2 text-left">Item</th>
                        <th class="border px-4 py-2 text-left">Quantity</th>
                        <th class="border px-4 py-2 text-right">Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% Object.values(order.items).forEach(function(item) { %>
                    <tr>
                        <td class="border px-4 py-2"><%= item.pizzaName %></td>
                        <td class="border px-4 py-2"><%= item.qty %></td>
                        <td class="border px-4 py-2 text-right">$<%= item.price %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Total -->
        <div class="flex justify-end mt-6">
            <div class="w-1/2">
                <p class="text-right font-semibold">Total Amount: $<%= order.items.totalAmount %></p>
            </div>
        </div>

        <!-- Footer -->
        <div class="mt-10 text-center text-gray-500 text-sm">
            <p>Thank you for ordering with Your Pizza Store!</p>
        </div>
    </div>
</section>